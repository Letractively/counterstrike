<Window x:Class="CSL.Common.WindowException"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Exception" Height="200" Width="300" MinHeight="200" MinWidth="300" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="122*" />
            <ColumnDefinition Width="80*" MaxWidth="80" MinWidth="80" />
            <ColumnDefinition Width="80" MaxWidth="80" MinWidth="80" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="142*" />
            <RowDefinition Height="30" MaxHeight="30" MinHeight="30" />
        </Grid.RowDefinitions>
        <TextBox Margin="5" Name="textBoxException" IsReadOnly="True" Grid.ColumnSpan="3" />
        <Button Grid.Row="1" Grid.Column="2" Margin="3" Height="22" Width="70" Name="buttonClose" Click="buttonClose_Click">Close</Button>
        <Button Grid.Row="1" Grid.Column="1" Margin="0,3,6,2.474" Name="buttonCopy" Click="buttonCopy_Click" >Copy all</Button>
    </Grid>
</Window>
