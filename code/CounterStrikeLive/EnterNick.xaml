<local:ChildWindow
    xmlns:local="clr-namespace:CounterStrikeLive"      
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
    Title="EnterNick"
	x:Class="CounterStrikeLive.EnterNick" Height="173" Width="387" Style="{StaticResource ChildWindowStyle1}">

    <Grid x:Name="LayoutRoot">
        
        <TextBox Margin="53,52,0,0" Text="" TextWrapping="Wrap" BorderBrush="{x:Null}" Foreground="#FFFFD300" SelectionBackground="{x:Null}" SelectionForeground="{x:Null}" Background="#2D6C6C6C" VerticalAlignment="Top" Height="24" Width="253" HorizontalAlignment="Left" x:Name="_TextPannel"/>
        <TextBlock Margin="53,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="14" Width="125" HorizontalAlignment="Left" d:LayoutOverrides="HorizontalAlignment, VerticalAlignment"><Run Foreground="#FFFFFFFF" Text="Enter your nickname:"/></TextBlock>
        <Button Height="34" HorizontalAlignment="Right" Margin="0,0,8,8" VerticalAlignment="Bottom" Width="103" Content="OK" Style="{StaticResource ButtonStyle2}" BorderThickness="0,0,0,0" x:Name="_ok"/>
    </Grid>
</local:ChildWindow>